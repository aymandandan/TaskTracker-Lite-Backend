# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/tasktracker

# JWT Configuration
JWT_SECRET=your_ultra_secure_jwt_secret_key_here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Rate Limiting (requests per windowMs)
RATE_LIMIT_WINDOW_MS=60 * 60 * 1000  # 1 hour
RATE_LIMIT_MAX=100  # 100 requests per hour per IP

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'

# Email Configuration (for password reset)
# For development, you can use Mailtrap or similar services
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_FROM_ADDRESS=noreply@tasktracker.com
EMAIL_FROM_NAME=TaskTracker
